<h1>Adherents#edit</h1>

<%= form_for @adherent, :url => { :action => 'update' } do |f| %>

    <div class="card" >
        <div class="card-body" >

    <div style="margin:10px 0;width:100%">
        <div class="input-group">
            <span class="input-group-text">Nom & Prenom</span>
            <%= f.text_field :nom, placeholder:"Nom", class:"form-control", value:@adherent.nom%>
            <%= f.text_field :prenom, placeholder:"Prenom", class:"form-control", value:@adherent.prenom%>
        </div>
    </div>
    <div style="margin:10px 0;width:100%">
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">@</span>
            <%= f.text_field :email, class:"form-control", value:@adherent.email, placeholder:"Votre e-mail" %>
        </div>
    </div>
    <div style="margin:10px 0;width:100%">
        <div class="input-group mb-3">
            <%= f.password_field :password, placeholder:"Nouveau Mot de passe", class:"form-control" %>
        </div>
    </div>

    <div style="margin-bottom:10px; margin-top:30px;width:100%">
        <%= f.submit "Submit", disable_with: 'Submiting...', class:"btn btn-primary", style:"width:100%" %>
    </div>

    </div>
    </div>

<% end %>